pipeline {
    agent none

    stages {

        stage('Docker Agent Job') {
            agent { label 'docker' }
            steps {
                echo "Running on Docker agent"
                sh 'docker --version'
                sh 'hostname'
            }
        }

        stage('Linux Agent Job') {
            agent { label 'linux' }
            steps {
                echo "Running on Linux agent"
                sh 'uname -a'
                sh 'df -h'
            }
        }
    }
}
